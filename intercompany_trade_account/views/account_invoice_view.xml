<openerp><data>

    <record id="view_account_invoice_search" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="number" position="after">
                <filter string="Intercompany Trade" name="intercompany_trade" domain="[('intercompany_trade','=',True)]"/>
            </field>
        </field>
    </record>

    <record id="view_account_invoice_form_customer" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
          <xpath expr="//sheet[@string='Invoice']/h1" position="inside">
                <span class="intercompany_trade_done"
                    attrs="{'invisible': ['|', ('state', 'not in', ['paid']), ('intercompany_trade','=', False)]}">Intercompany Trade Done</span>
                <span class="intercompany_trade_todo"
                    attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'verified', 'proforma', 'proforma2']), ('intercompany_trade','=', False)]}">Intercompany Trade To Confirm</span>
                <span class="intercompany_trade_todo"
                    attrs="{'invisible': ['|', ('state', 'not in', ['open']), ('intercompany_trade','=', False)]}">Intercompany Trade To Pay</span>
                <span class="intercompany_trade_canceled"
                    attrs="{'invisible': ['|', ('state', 'not in', ['cancel']), ('intercompany_trade','=', False)]}">Intercompany Trade Canceled</span>
            </xpath>
            <field name="account_id" position="after">
                <field name="intercompany_trade"
                    groups="intercompany_trade_base.intercompany_trade_user"
                    />
                <field name="intercompany_trade_account_invoice_id"
                    groups="intercompany_trade_base.intercompany_trade_manager"/>
            </field>
        </field>
    </record>

    <record id="view_account_invoice_form_supplier" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
          <xpath expr="//sheet[@string='Supplier Invoice']/div/h1" position="inside">
                <span class="intercompany_trade_done"
                    attrs="{'invisible': ['|', ('state', 'not in', ['paid']), ('intercompany_trade','=', False)]}">Intercompany Trade Done</span>
                <span class="intercompany_trade_todo"
                    attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'verified', 'proforma', 'proforma2']), ('intercompany_trade','=', False)]}">Intercompany Trade To Confirm</span>
                <span class="intercompany_trade_todo"
                    attrs="{'invisible': ['|', ('state', 'not in', ['open']), ('intercompany_trade','=', False)]}">Intercompany Trade To Pay</span>
                <span class="intercompany_trade_canceled"
                    attrs="{'invisible': ['|', ('state', 'not in', ['cancel']), ('intercompany_trade','=', False)]}">Intercompany Trade Canceled</span>
            </xpath>
            <field name="account_id" position="after">
                <field name="intercompany_trade"
                    groups="intercompany_trade_base.intercompany_trade_user"
                    />
                <field name="intercompany_trade_account_invoice_id"
                    groups="intercompany_trade_base.intercompany_trade_manager"/>
            </field>
        </field>
    </record>

</data></openerp>
