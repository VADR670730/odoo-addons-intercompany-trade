<openerp>
    <data>

<!-- Model: intercompany.trade.config -->
        <record id="view_intercompany_trade_config_form" model="ir.ui.view">
            <field name="model">intercompany.trade.config</field>
            <field name="inherit_id" ref="intercompany_trade_base.view_intercompany_trade_config_form" />
            <field name="arch" type="xml">
                <field name="customer_partner_id" position="after">
                    <field name="sale_pricelist_id"/>
                </field>
            </field>
        </record>

<!-- Define: product.intercompany.trade.catalog -->
        <record id="view_product_intercompany_trade_catalog_tree" model="ir.ui.view">
            <field name="model">product.intercompany.trade.catalog</field>
            <field name="arch" type="xml">
                <tree string="Intercompany Trade - Products Catalog">
                    <field name="customer_product_tmpl_id"/>
                    <field name="supplier_sale_price"/>
                    <field name="supplier_product_uom"/>
                    <field name="supplier_product_default_code"/>
                    <field name="supplier_product_name"/>
                    <field name="supplier_category_id" invisible="1"/>
                    <field name="supplier_category_name"/>
                    <field name="supplier_partner_id" invisible="1"/>
                    <field name="supplier_partner_name"/>
                    <field name="customer_company_id" groups="base.group_multi_company"/>
                    <button name="link_product_wizard" icon="gtk-add" type="object" string="Link Product Windows"
                        attrs="{'invisible': [('customer_product_tmpl_id', '!=', False)]}"/>
                    <button name="unlink_product" icon="gtk-cancel" type="object" string="Unlink Product"
                        attrs="{'invisible': [('customer_product_tmpl_id', '=', False)]}" groups="intercompany_trade_base.intercompany_trade_manager"/>
                </tree>
            </field>
        </record>

        <record id="view_product_intercompany_trade_catalog_search" model="ir.ui.view">
            <field name="model">product.intercompany.trade.catalog</field>
            <field name="arch" type="xml">
                <search string="Intercompany Trade - Products Catalog">
                    <filter name="linked_product" string="Linked Products"
                        domain="[('customer_product_tmpl_id','!=', False)]"/>
                   <field name="supplier_product_default_code" string="Supplier Product Code" filter_domain="[
                            ('supplier_product_default_code','ilike',self)]"/>
                   <field name="supplier_product_name" string="Supplier Product Name" filter_domain="[
                            ('supplier_product_name','ilike',self)]"/>
                   <field name="supplier_partner_id"/>
                   <field name="supplier_category_id"/>
                    <group expand="0" string="Group by...">
                        <filter string="Partner" domain="[]" context="{'group_by' : 'supplier_partner_id'}"/>
                        <filter string="Supplier Product Category" domain="[]" context="{'group_by' : 'supplier_category_id'}"/>
                    </group>

                </search>
            </field>
        </record>

<!-- Define: intercompany.trade.wizard.link.product -->
        <record id="view_intercompany_trade_wizard_link_product_form" model="ir.ui.view">
            <field name="model">intercompany.trade.wizard.link.product</field>
            <field name="arch" type="xml">
                <form string="Intercompany Trade - Link Product">
                    <group>
                        <group string="Your Product">
                            <field name="customer_product_id" />
                            <field name="customer_product_tmpl_id" />
                        </group>
                        <group string="Supplier Product">
                            <field name="supplier_product_code" />
                            <field name="supplier_product_name" />
                            <field name="supplier_sale_price" />
                            <field name="supplier_product_uom_name" />
                        </group>
                        <group colspan="4">
                            <button name="link_product" type="object" string="Link Product"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>
