<openerp>
    <data>

<!-- Overload: account.invoice -->
        <record id="view_account_invoice_form_customer" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
              <xpath expr="//sheet[@string='Invoice']/h1" position="inside">
                    <span class="integrated_trade_form_view"
                      attrs="{'invisible': [('integrated_trade','=', False)]}"
                      groups="integrated_trade_base.integrated_trade_user">
                      Integrated Trade
                    </span>
                </xpath>
                <field name="account_id" position="after">
                    <field name="integrated_trade"
                        groups="integrated_trade_base.integrated_trade_user"
                        />
                    <field name="integrated_trade_account_invoice_id"
                        groups="integrated_trade_base.integrated_trade_manager"/>
                </field>
            </field>
        </record>

        <record id="view_account_invoice_form_supplier" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
              <xpath expr="//sheet[@string='Supplier Invoice']/div/h1" position="inside">
                    <span class="integrated_trade_form_view"
                      attrs="{'invisible': [('integrated_trade','=', False)]}"
                      groups="integrated_trade_base.integrated_trade_user">
                      Integrated Trade
                    </span>
                </xpath>
                <field name="account_id" position="after">
                    <field name="integrated_trade"
                        groups="integrated_trade_base.integrated_trade_user"
                        />
                    <field name="integrated_trade_account_invoice_id"
                        groups="integrated_trade_base.integrated_trade_manager"/>
                </field>
            </field>
        </record>

<!-- Overload: product.integrated.trade.catalog -->
        <record id="view_product_integrated_trade_catalog_tree" model="ir.ui.view">
            <field name="model">product.integrated.trade.catalog</field>
            <field name="inherit_id" ref="integrated_trade_product.view_product_integrated_trade_catalog_tree"/>
            <field name="arch" type="xml">
                <field name="supplier_sale_price" position="replace">
                    <field name="supplier_sale_price_vat_excl"/>
                    <field name="supplier_sale_price_vat_incl"/>
                </field>
            </field>
        </record>

        <record id="view_integrated_trade_wizard_link_product_form" model="ir.ui.view">
            <field name="model">integrated.trade.wizard.link.product</field>
            <field name="inherit_id" ref="integrated_trade_product.view_integrated_trade_wizard_link_product_form"/>
            <field name="arch" type="xml">
                <field name="supplier_sale_price" position="replace">
                    <field name="supplier_sale_price_vat_excl"/>
                    <field name="supplier_sale_price_vat_incl"/>
                </field>
            </field>
        </record>

    </data>

</openerp>
