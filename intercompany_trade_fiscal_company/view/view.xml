<openerp>
    <data>

<!-- Model: fiscal.company.transcoding.account -->
        <record id="view_fiscal_company_transcoding_account_tree" model="ir.ui.view">
            <field name="model">fiscal.company.transcoding.account</field>
            <field name="arch" type="xml">
                <tree string="Transcoding Account for Fiscal Company">
                    <field name="from_account_id"/>
                    <field name="to_account_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="view_fiscal_company_transcoding_account_form" model="ir.ui.view">
            <field name="model">fiscal.company.transcoding.account</field>
            <field name="arch" type="xml">
                <form string="Transcoding Account for Fiscal Company" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="from_account_id"/>
                            <field name="to_account_id"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Inherit Model: intercompany.trade.config -->
        <record id="view_intercompany_trade_config_form" model="ir.ui.view">
            <field name="model">intercompany.trade.config</field>
            <field name="inherit_id" ref="intercompany_trade_base.view_intercompany_trade_config_form" />
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="same_fiscal_mother_company" />
                </field>
            </field>
        </record>

    </data>
</openerp>

