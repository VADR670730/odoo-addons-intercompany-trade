<openerp><data>

    <record id="view_sale_order_search" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <filter name="message_unread" position="after">
                <filter string="Intercompany Trade" name="intercompany_trade" domain="[('intercompany_trade', '=', True)]"/>
            </filter>
        </field>
    </record>

    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <span class="intercompany_trade_done"
                    attrs="{'invisible': ['|', ('state', 'not in', ('done')), ('intercompany_trade','=', False)]}">Intercompany Trade Done</span>
                <span class="intercompany_trade_waiting"
                    attrs="{'invisible': ['|', ('state', 'not in', ('draft')), ('intercompany_trade','=', False)]}">Intercompany Trade On Hold</span>
                <span class="intercompany_trade_todo"
                    attrs="{'invisible': ['|', ('state', 'not in', ('sent')), ('intercompany_trade','=', False)]}">Intercompany Trade To Confirm</span>
                <span class="intercompany_trade_canceled"
                    attrs="{'invisible': ['|', ('state', 'not in', ('cancel')), ('intercompany_trade','=', False)]}">Intercompany Trade Canceled</span>
            </field>
            <field name="partner_id" position="after">
                <field name="intercompany_trade" groups="intercompany_trade_base.intercompany_trade_user"
                    attrs="{'invisible': [('intercompany_trade', '=', False)]}"/>
                <field name="intercompany_trade_purchase_order_id" groups="intercompany_trade_base.intercompany_trade_manager"/>
            </field>
            <xpath expr="//button[@name='print_quotation' and @states='draft']" position="attributes">
                <attribute name="states" />
                <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', ('draft'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='print_quotation' and @states='sent,progress,manual']" position="attributes">
                <attribute name="states" />
                <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', ('sent', 'progress', 'manual'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send' and @states='draft']" position="attributes">
                <attribute name="states" />
                <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', ('draft'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send' and @states='sent,progress,manual']" position="attributes">
                <attribute name="states" />
                <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', ('sent', 'progress', 'manual'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='cancel' and @states='draft,sent']" position="attributes">
                <attribute name="states" />
                <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', ('draft', 'sent'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_button_confirm' and @states='draft']" position="attributes">
                <attribute name="states" />
                <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', ('draft'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='copy_quotation' and @states='cancel']" position="attributes">
                <attribute name="states" />
                <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', ('cancel'))]}</attribute>
            </xpath>
        </field>
    </record>

</data></openerp>
