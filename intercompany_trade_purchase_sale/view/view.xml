<openerp>
    <data>

<!-- Model: intercompany.trade.config -->
        <record id="view_intercompany_trade_config_form" model="ir.ui.view">
            <field name="model">intercompany.trade.config</field>
            <field name="inherit_id" ref="intercompany_trade_base.view_res_intercompany_trade_form" />
            <field name="arch" type="xml">
                <field name="supplier_partner_id" position="after">
                    <field name="purchase_pricelist_id"/>
                </field>
            </field>
        </record>

<!-- Overload: purchase.order -->
        <record id="view_purchase_order_form" model="ir.ui.view">
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <span class="intercompany_trade_nothing_to_do"
                        attrs="{'invisible': ['|', ('state', 'in', ['draft', 'sent']), ('intercompany_trade','=', False)]}">Intercompany Trade</span>
                    <span class="intercompany_trade_todo"
                        attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('intercompany_trade','=', False)]}">Intercompany Trade To Confirm</span>
                    <span class="intercompany_trade_waiting"
                        attrs="{'invisible': ['|', ('state', 'not in', ['sent']), ('intercompany_trade','=', False)]}">Intercompany Trade On Hold</span>
                </field>
                <field name="partner_ref" position="after">
                    <field name="intercompany_trade" groups="intercompany_trade_base.intercompany_tradetrade_user"
                        attrs="{'invisible': [('intercompany_trade', '=', False)]}"/>
                    <field name="intercompany_trade_sale_order_id" groups="intercompany_trade_base.intercompany_tradetrade_manager"/>
                </field>
                <xpath expr="//button[@name='wkf_send_rfq' and @states='draft']" position="after">
                    <button name="intercompany_trade_request" type="object" string="Confirm Request"
                        attrs="{'invisible': ['|', ('intercompany_trade','=', False), ('state', 'not in', 'draft')]}"
                    />
                </xpath>
                <xpath expr="//button[@name='wkf_send_rfq' and @states='draft']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='wkf_send_rfq' and @states='sent']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'sent')]}</attribute>
                </xpath>

                <xpath expr="//button[@name='print_quotation' and @states='draft']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='print_quotation' and @states='sent']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'sent')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='purchase_confirm' and @states='draft']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='purchase_confirm' and @states='sent']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'sent')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel_draft' and @states='cancel,sent,confirmed']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'cancel,sent,confirmed')]}</attribute>
                </xpath>
            </field>
        </record>

<!-- Overload: sale.order -->
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <span class="intercompany_trade_nothing_to_do"
                        attrs="{'invisible': ['|', ('state', 'in', ['draft', 'sent']), ('intercompany_trade','=', False)]}">Intercompany Trade</span>
                    <span class="intercompany_trade_waiting"
                        attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('intercompany_trade','=', False)]}">Intercompany Trade On Hold</span>
                    <span class="intercompany_trade_todo"
                        attrs="{'invisible': ['|', ('state', 'not in', ['sent']), ('intercompany_trade','=', False)]}">Intercompany Trade To Confirm</span>
                </field>
                <field name="partner_id" position="after">
                    <field name="intercompany_trade" groups="intercompany_trade_base.intercompany_tradetrade_user"
                        attrs="{'invisible': [('intercompany_trade', '=', False)]}"/>
                    <field name="intercompany_trade_purchase_order_id" groups="intercompany_trade_base.intercompany_tradetrade_manager"/>
                </field>
                <xpath expr="//button[@name='print_quotation' and @states='draft']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='print_quotation' and @states='sent,progress,manual']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'sent,progress,manual')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send' and @states='draft']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send' and @states='sent,progress,manual']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'sent,progress,manual')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='cancel' and @states='draft,sent']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'draft,sent')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_button_confirm' and @states='draft']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'draft')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='copy_quotation' and @states='cancel']" position="attributes">
                    <attribute name="states" />
                    <attribute name="attrs">{'invisible': ['|', ('intercompany_trade','=', True), ('state', 'not in', 'cancel')]}</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
